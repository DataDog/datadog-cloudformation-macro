{
  "name": "datadog-cfn-macro",
  "version": "0.1.0",
  "description": "Cloudformation macro to automatically instrument python and node functions with datadog tracing",
  "repository": "https://github.com/DataDog/datadog-cloudformation-macro",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "tslint --project tsconfig.json",
    "check-formatting": "prettier --check src/**",
    "format": "prettier --write src/**"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.1.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "aws-sdk": "^2.712.0",
    "serverless": "^1.74.1"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcovonly",
      "text-summary"
    ],
    "testRegex": "(test\\/).*(\\.spec\\.ts)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
