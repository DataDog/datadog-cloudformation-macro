{
  "name": "datadog-serverless-macro",
  "version": "0.4.1",
  "description": "Cloudformation macro to automatically instrument python and node functions with datadog tracing",
  "repository": "https://github.com/DataDog/datadog-cloudformation-macro",
  "author": "Datadog",
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp package.json dist/package.json && cd dist && yarn install --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint -c .eslintrc . --ext .ts",
    "check-formatting": "prettier --check src/** test/**",
    "format": "prettier --write src/** test/**"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "aws-sdk": "^2.814.0",
    "loglevel": "^1.8.0"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcovonly",
      "text-summary"
    ],
    "testRegex": "(test\\/).*(\\.spec\\.ts)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
