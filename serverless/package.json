{
  "name": "datadog-serverless-macro",
  "version": "0.15.0",
  "description": "Cloudformation macro to automatically instrument python and node functions with datadog tracing",
  "repository": "https://github.com/DataDog/datadog-cloudformation-macro",
  "author": "Datadog",
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp package.json dist/package.json && cd dist && yarn install --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint -c .eslintrc . --ext .ts",
    "check-formatting": "prettier --check src/** test/**",
    "format": "prettier --write src/** test/**"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "aws-sdk": "^2.1531.0",
    "loglevel": "^1.8.1"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcovonly",
      "text-summary"
    ],
    "testRegex": "(test\\/).*(\\.spec\\.ts)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
